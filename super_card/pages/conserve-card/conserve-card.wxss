/* super_card/pages/conserve-card/conserve-card.wxss */
.contains{
  font-size: 36rpx;
}
.top{
  margin:20rpx;
  background-color: #fff;
  display: flex;
  flex-flow: column;
  align-items: center;
  justify-content: center;
  display: -webkit-flex;
  -webkit-flex-flow: column;
  -webkit-align-items: center;
  -webkit-justify-content: center;
}
.title{
  color: #467faa;
  display: flex;
  justify-content:center;
  align-content: center;
  display: -webkit-flex;
  -webkit-justify-content:center;
  -webkit-align-content: center;
  padding: 30rpx 0 20rpx 0;
}
.name{
  color: #000;
}
.top-img{
  width: 250rpx;
  height: 250rpx;
}
.top-img-solid{
  width: 100%;
  background-color: #f2f7fa;
}
.trg{
  display: flex;
  flex-flow: column;
  align-items: center;
  justify-content: center;
  display: -webkit-flex;
  -webkit-flex-flow: column;
  -webkit-align-items: center;
  -webkit-justify-content: center;
}
.trg text:nth-child(1){
  font-size: 26rpx;
  padding-top:30rpx;
}
.trg text:nth-child(2){
  font-size: 30rpx;
  color:#467faa;
  padding: 16rpx 0 20rpx 0;
}
.trg text:nth-child(3){
  font-size: 28rpx;
  color:#8b8b8b;
  padding-bottom: 30rpx;
}
.content{
  display: flex;
  align-items: center;
  display: -webkit-flex;
  -webkit-align-items: center;
  background-color: #fff;
  /* margin:20rpx; */
}
.content text{
  font-size: 28rpx;
  color:#8b8b8b;
  height: 110rpx;
  line-height: 110rpx;
  padding-left: 30rpx;
}
swiper.con{
  margin-bottom:200rpx;
  height:552rpx;
  padding:0 20rpx;
}

swiper-item image{
  width: 100%;
  text-align: center;
}

.btn-submit{
  position: fixed;
  bottom: 0;
  width:94%;
  padding:40rpx 3vw;
}
.btn-block{
  line-height: 90rpx;
}
.btn-blue{
  color: #fff;
  font-size: 36rpx;
  background: -webkit-linear-gradient(left, #4fc1f6 , #187bf5);
  background: linear-gradient(to right, #4fc1f6 , #187bf5);
  border-radius:50rpx;
  -webkit-border-radius:50rpx;
}

.mask{
  position: fixed;
  top: 0;
  width: 100%;
  height: 100vh;
  background-color:rgba(0,0,0,0.4);
}
.con-b{
  position: fixed;
  bottom: 0;
}
.bottom-fix{
  background-color: #fff;
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
  display: flex;
  flex-flow: column;
  align-items: center;
  justify-content: center;
  display: -webkit-flex;
  -webkit-flex-flow: column;
  -webkit-align-items: center;
  -webkit-justify-content: center;
}
.bottom-fix-title{
  color: #87919e;
  font-size: 32rpx;
  margin: 50rpx 0;
}
.bottom-fix-content{
  font-size: 26rpx;
  margin: 0 40rpx;
}
.bottom-fix-info{
  display: inline-flex;
  flex-flow: column;
  align-items: center;
  justify-content: center;
  -webkit-flex-flow: column;
  -webkit-align-items: center;
  -webkit-justify-content: center;
  width: 49%;
  border-radius:20rpx;
}
.bottom-fix-info text{
  margin:6rpx;
}
.tag{
  color: #fff;
  background-color: #f90;
}
.btn-confirm{
  margin:40rpx;
  width: 90%;
}
.hide{
  display: none !important;
}
.change-btn {
    background:#ebbb2a;
    color:#000;
    border-radius:10px;
    padding:0 8px;
    margin-top:15rpx;
    font-size:12px;
}

.con-change {
    position: fixed;
    width: 300rpx;
    padding: 20rpx;
    left: 50%;
    top: 50%;
    transform: translate(-50% , -50%);
    background: #fff;
    border-radius: 30rpx;
    height: 300rpx;
}
.change-text {
    width: 100%;
    display: block;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
}
.con-change .on {
    color: #00a1e9;
    
}
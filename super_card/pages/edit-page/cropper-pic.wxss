/* super_card/pages/edit-page/croper-pic.wxss */
page{
  width:100%;
  height:100%;
}
.cropper-wrapper {
position:relative;
display:flex;
flex-direction:row;
align-items:center;
justify-content:center;
height: 100%;
}

.cropper{
    position: absolute;
    top: 0;
    left: 0;
}


.cropper-buttons{
    background-color: rgba(0, 0, 0, 0.95);
    color: #04b00f;
    display:flex;
    flex-direction:row;
    align-items:center;
    justify-content:center;
    position:absolute;
    bottom:0;
    left:0;
    width:100%;
    height:50px;
    line-height:50px;
}

.cropper-buttons .upload, .cropper-buttons .getCropperImage {
width:50%;
text-align:center;

}

/* super_card/pages/group-manage/group-manage.wxss */
.contains{
  font-size: 36rpx;
}
.group{
  margin-top:50rpx;
  background-color:#fff;
  border-bottom: 1px solid #e2e2e2;
  border-top: 1px solid #e2e2e2;
}
.act{
  display:flex;
  display:-webkit-flex;
  margin:0 20rpx;
  padding: 20rpx 0;
  border-bottom: 1px solid #e5e5e5;
}
.info-set{
  display: flex;
  flex-flow: column;
  justify-content:center;
  flex: 1;
  display: -webkit-flex;
  -webkit-flex-flow: column;
  -webkit-justify-content:center;
  -webkit-flex: 1;
}
.group-t{
  display: flex;
  display: -webkit-flex;
}
.group-remarks{
  margin-left: 20rpx;
  font-size: 30rpx;
  color:#888888;
  display: flex;
  display: -webkit-flex;
}
.remarks-content{
  flex: 1;
  -webkit-flex: 1;
}

.act:last-child{
  border: 0;
}
.imgset{
  width:132rpx;
  height: 132rpx;
  display: inline-block;
  border: 1px solid #bcbcbc;
}
.imgset image{
  width: 40rpx;
  height: 40rpx;
  /* margin:2rpx; */
  display:block;
  float:left;
  /* background: #e6e6e6; */
}
.imgset .group-image{
  width: 40rpx;
  height: 40rpx;
  margin:2rpx;
  float:left;
  background: #e6e6e6;
  display:flex;
  align-items:flex-start;
  justify-content:center;
  display:-webkit-flex;
  -webkit-align-items:flex-start;
  -webkit-justify-content:center;
}
.imgset .group-image text{
  font-size:40rpx;
  height:40rpx;
  line-height:40rpx;
  color:#787878;
}
.group-info{
  display:flex;
  flex-flow:column;
  justify-content:center;
  display:-webkit-flex;
  -webkit-flex-flow:column;
  -webkit-justify-content:center;
  margin-left: 20rpx;
  flex: 1;
  -webkit-flex: 1;
}
.name{
  height: 44rpx;
  line-height: 44rpx;
  font-size:32rpx;
  display:block;
  letter-spacing: 1px;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
}
.total{
  height: 44rpx;
  display: flex;
  align-items:center;
  display: -webkit-flex;
  -webkit-align-items:center;
}
.total text.exp,.manage text.exp{
  font-size: 26rpx;
  vertical-align:top;
  display:inline-block;
  color: #888888;
  padding-right: 20rpx;
}
.total image{
  width: 44rpx;
  height: 44rpx;
  display: inline-block;
  vertical-align:top;
  margin: 0 4rpx;
}
.add-pl{
  font-size:32rpx;
  height:32rpx;
  line-height:32rpx;
  padding-right:10rpx;
}
.store-pl{
  font-size:40rpx;
  height:40rpx;
  line-height:40rpx;
}
.manage{
  display: inline-block;
  height: 44rpx;
}
.manage image{
  width: 44rpx;
  height: 44rpx;
  display: inline-block;
  vertical-align:top;
  margin: 0 4rpx;
}
.fit{
  font-size: 60rpx;
  padding-right: 20rpx;
  color:#bcbcbc;
}
.change{
  display: flex;
  display: -webkit-flex;
  padding-top: 20rpx;
  align-items:center;
  -webkit-align-items:center;
}
.change text{
  padding-left: 6rpx;
}
.content{
  background-color: #fff;
  border-bottom: 1px solid #e2e2e2;
  border-top: 1px solid #e2e2e2;
  margin-bottom:120rpx;
}
.card-holder{
  background-color: #fff;
  margin: 0 20rpx;
  padding: 20rpx 0;
  display: flex;
  display: -webkit-flex;
  border-bottom: 1px solid #e2e2e2;
}
.content navigator:last-child .card-holder{
  border: 0;
} 
.img{
  width: 150rpx;
  height: 150rpx;
  background-color: #000;
  border-radius: 14rpx;
  vertical-align: middle;
}
.card-info{
  display:flex;
  flex-flow:column;
  justify-content:center;
  display:-webkit-flex;
  -webkit-flex-flow:column;
  -webkit-justify-content:center;
  padding-left:30rpx;
  vertical-align: middle;
  flex: 1;
  -webkit-flex: 1;
}
.card-info text{
  display: block;
}
.card-name{
  display: flex;
  display: -webkit-flex;
  text-align: right;
  height:50rpx;
  line-height: 50rpx;
}
.card-icon{
  display: flex;
  align-items: center;
  display: -webkit-flex;
  -webkit-align-items: center;
}
.card-icon text{
  flex:1;
  -webkit-flex:1;
  margin-right: 10rpx;
  display: -webkit-box;    
  -webkit-box-orient: vertical;    
  -webkit-line-clamp: 1;    
  overflow: hidden;
  word-break:break-all;
}
.card-icon icon{
  height:30rpx;
  line-height:30rpx;
  display:flex;
  display:-webkit-flex;
  padding-left:10rpx;
}
.card-name text{
  display: inline-block;
}
.card-name text:nth-child(1){
  font-size: 36rpx;
  float: left;
}
.card-name text:nth-child(2){
  font-size:24rpx;
  color:#999999;
  flex: 1;
  -webkit-flex: 1;
}
.job{
  font-size:24rpx;
  color:#999999;
  height:50rpx;
  line-height: 50rpx;
}
.company{
  font-size:30rpx;
  color:#999999;
  height:50rpx;
  line-height: 50rpx;
  display: -webkit-box;    
  -webkit-box-orient: vertical;    
  -webkit-line-clamp: 1;    
  overflow: hidden;
  word-break:break-all;
}
.fix{
  position: fixed;
  bottom: 0;
  height: 100rpx;
  line-height: 100rpx;
  background-color: #fff;
  border-top:1px solid #e2e2e2;
  color: #00a1e9;
  text-align: center;
  width: 100%;
  display: flex;
  justify-content:center;
  align-items:center;
  display: -webkit-flex;
  -webkit-justify-content:center;
  -webkit-align-items:center;
}
.yes{
  color:#00a1e9;
}

.fix button{
  background-color:#fff;
  margin:0;
  width:100%;
  display:flex;
  align-items:center;
  justify-content:center;
  display:-webkit-flex;
  -webkit-align-items:center;
  -webkit-justify-content:center;
}
.fix button::after{
  border: none;
}

.bottom{
  margin: 20rpx;
}
.btn-submit{
  margin:20rpx 0;
}
.btn-block{
  line-height: 90rpx;
  border-radius:50rpx;
}
.btn-white{
  background: #fff;
  color: #00a1e9;
  border: 1px solid #00a1e9;
}

/* 移除成员修改 */
.content-item{
  display: flex;
  display: -webkit-flex;
  border-top:1px solid #e2e2e2;
}
.l-checkbox{
  line-height: 200rpx;
  margin-left: 20rpx;
}
/*checkbox 选项框大小  */
checkbox .wx-checkbox-input {
  width: 40rpx;
  height: 40rpx;
  border-radius: 100%;
}
/*checkbox选中后样式  */
checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  background: #FF525C;
}
/*checkbox选中后图标样式  */
checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  width: 28rpx;
  height: 28rpx;
  line-height: 28rpx;
  text-align: center;
  font-size: 22rpx;
  color: #fff;
  background: transparent;
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}
.edit-member{
  height: 80rpx;
  width: 100%;
  line-height: 80rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  font-size: 30rpx;
  color: #999999;
  background: #fff;
  display: flex;
  display: -webkit-flex;
}
.edit-l{
  flex: 2;
}
.edit-r{
  text-align: right;
  margin-left: 200rpx;
  padding: 0 20rpx;
}
.edit-inner{
  display: flex;
  align-items: center;
  display: -webkit-flex;
  -webkit-align-items: center;
}
.inner-l{
  flex: 1;
}
.inner-r{
  width: 150rpx;
  color: #fff;
  font-size: 30rpx;
  text-align: center;
  height: 75rpx;
  background: #FF525C;
}
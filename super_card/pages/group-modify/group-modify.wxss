.contains{
  color: #6f6f6f;
  font-size: 36rpx;
}
.title{
  font-weight:600;
  color:#000;
  display:block;
  font-size: 34rpx;
  margin:50rpx 20rpx 20rpx 20rpx;
}
.info{
  background-color:#fff;
  display:flex;
  display:-webkit-flex;
  padding:25rpx 20rpx 25rpx 50rpx;
}
.info input{
  flex:1;
  -webkit-flex:1;
}
.info image{
  width:50rpx;
  height:50rpx;
  text-align: center;
}
.info-rad{
  background-color:#fff;
}
.act{
  display:flex;
  display:-webkit-flex;
  margin:0 20rpx;
  padding:20rpx 0;
  border-bottom:1px solid #d9d9d9;
}
.act:last-of-type{
  border:0;
}
.radio-group{
  font-size:30rpx;
}
.radio{
  display:inline-block;
  width:100%;
}
radio{
  padding-left:20rpx;
}

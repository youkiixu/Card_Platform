/* super_card/pages/demand/demand.wxss */
.top{
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  display: -webkit-flex;
  -webkit-align-items: center;
  -webkit-justify-content: center;
  height: 100rpx;
  background-color: #fff;
  color: #00a1e9;
  font-weight: 600;
}
.content{
  border-top: 1px solid #e5e5e5;
}
label{
  display: flex;
  align-items: center;
  display: -webkit-flex;
  -webkit-align-items: center;
  background-color: #fff;
  padding: 20rpx 30rpx;
  border-bottom: 1px solid #e5e5e5;
}
.check-info{
  display: flex;
  flex-flow: column;
  align-items: flex-start;
  display: -webkit-flex;
  -webkit-flex-flow: column;
  -webkit-align-items: flex-start;
  font-size: 28rpx;
  color: #bbbbbb;
  margin-left: 40rpx;
  word-break:break-all;
}

checkbox .wx-checkbox-input{
   border-radius: 50%;
   width: 40rpx;
   height: 40rpx;
}
.check-info-top{
  color:#999999;
}
.check-eye{
  display: flex;
  align-items: center;
  justify-content: flex-start;
  display: -webkit-flex;
  -webkit-align-items: center;
  -webkit-justify-content: flex-start;
}
.check-eye text:first-child{
  font-size: 36rpx;
  line-height: 36rpx;
}

/*.check-eye text:last-child{
  font-size: 28rpx;
}*/
.top-lx {
color:#f90;
border-radius:10rpx;
border:1px solid #f90;
padding:0px 10px;
font-size:10px;
}


.bottom{
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
  display: -webkit-flex;
  -webkit-align-items: center;
  position: fixed;
  bottom: 0;
  left: 0;
  /* border-top: 1px solid #e5e5e5; */
}
.bottom-c{
  flex: 2;
  -webkit-flex: 2;
  border-top: 1px solid #e5e5e5;
}
.bottom-c checkbox-group{
  height: 100rpx;
}
.bottom-c label{
  border: 0;
  height:60rpx;
}
.all-c{
  font-size: 32rpx;
}
.cancel,.delete{
  flex: 1;
  -webkit-flex: 1;
  font-size: 32rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
}
.cancel{
  border-top: 1px solid #e5e5e5;
  border-left: 1px solid #e5e5e5;
  background-color: #fff;
  color: #999999;
}
.delete{
  border-top: 1px solid #f90;
  background-color: #f90;
  color: #fff;
}

.bottom-r{
  color:#fff;
border-radius:50%;
border:1px solid #fff;
width:100rpx;
height:100rpx;
display:flex;
align-items:center;
justify-content:center;
display:-webkit-flex;
-webkit-align-items:center;
-webkit-justify-content:center;
position:fixed;
bottom:50rpx;
right:30rpx;
background:#f90;
}
.bottom-r text{
  font-size: 50rpx;
  line-height: 50rpx;
}

.icon-sum{
  margin:0 20rpx 0 5rpx;
}
.check-eye .icon-xinheart281{
  font-size:30rpx;
  line-height:30rpx;
}
.check-eye .icon-xiaoxi{
  font-size:36rpx;
  line-height:30rpx;
}
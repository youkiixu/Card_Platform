/* super_card/pages/more-info/more-info.wxss */
.contains{
  font-size: 36rpx;
}
.title{
  display: flex;
  align-items:center;
  justify-content:space-between;
  display: -webkit-flex;
  -webkit-align-items:center;
  -webkit-justify-content:space-between;
  padding: 0 20rpx;
  color: #000;
}
.title text{
  height: 100rpx;
  line-height: 100rpx;
}
.content{
  background-color: #fff;
  padding: 0 20rpx;
}
.branchinfo{
  display: flex;
  display: -webkit-flex;
  border-bottom:1px solid #e4e4e4; 
}
.branchinfo:last-of-type{
  border-bottom: 0;
}
.branchinfo text{
  flex: 1;
  -webkit-flex: 1;
  height: 100rpx;
  line-height: 100rpx;
}
.branchinfo input{
  flex: 4;
  -webkit-flex: 4;
  height: 100rpx;
  line-height: 100rpx;
  padding-right: 20rpx;
}
.introduction input{
  flex:1;
  -webkit-flex:1;
  height: 100rpx;
  line-height: 100rpx;
}
.introduction textarea{
  width: 100%;
  height: 280px;
}
.btn-submit{
  margin:40rpx 20rpx;
  margin-bottom: 200rpx;
}
.btn-block{
  line-height:90rpx;
  border-radius:50rpx;
}
.btn-blue{
  background: #00a1e9;
  color: #fff;
}

.speech-introduction{
  font-size: 30rpx;
  border-radius:10rpx;
  background-color:#00a1e9;
  color:#fff;
  padding:10rpx 20rpx;
}
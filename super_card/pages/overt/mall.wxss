.type-navbar{
  white-space: nowrap;
  height: 80rpx;
  width: 100%;
  background-color: #fff;
  color: #333;
  font-size: 28rpx;
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.type-box{
  padding: 0 20rpx;
  box-sizing: content-box;
  line-height: 76rpx;
  text-align: center;
  display: inline-block;
  overflow: hidden;
}
.dh-act{
  border-bottom: 4rpx solid #fff;
}
.category_active{
  color:#f90;
  border-bottom:4rpx solid #f90;
}
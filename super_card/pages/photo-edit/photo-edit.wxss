/* super_card/pages/photo-edit/photo-edit.wxss */
.contains{
  font-size: 36rpx;
}
.title{
  text-align:center;
  height:100rpx;
  font-weight:600;
  line-height: 100rpx;
  background-color: #fff;
}
.photo{
  width: 100%;
  background-color: #00a1e9;
  display: flex;
  display: -webkit-flex;
}
.info{
  display: flex;
  display: -webkit-flex;
  padding: 0 20rpx;
  height: 100rpx;
  line-height: 100rpx;
  color: #949494;
  border-bottom: 1px solid #dfdfdf;
}
.sum{
  letter-spacing: 8rpx;
  flex: 1;
  -webkit-flex: 1;
}
.act{
  display: flex;
  display: -webkit-flex;
}
.act text{
  padding-left: 10rpx;
}
.look{
  padding-left: 50rpx;
}
.btn-submit{
  margin:20rpx;
}
.btn-block{
  line-height: 80rpx;
  border-radius:50rpx;
}
.btn-blue{
  background: #00a1e9;
  color: #fff;
}
.btn-white{
  color: #00a1e9;
  border: 1px solid #00a1e9;
}
.sort{
  flex:1;
  -webkit-flex:1;
}

/* 图片描述 */
.fr-word{
  background-color: #fff;
  padding:20rpx;
}
.fr-word textarea{
  width:100%;
  height:200rpx;
  font-size: 28rpx;
}


button.iconfont{
  background-color:inherit;
  border-radius:0;
}
button.iconfont::after{
  border: 0;
}
button.iconfont{
  padding:0;
  line-height:50rpx;
  width:50rpx;
  display:flex;
  align-items: center;
  justify-content:flex-end;
  display:-webkit-flex;
  -webkit-align-items: center;
  -webkit-justify-content:flex-end;
  color:#7f7f7f;
}

.bottom{
  margin: 20rpx;
}
.btn-submit{
  margin:20rpx 0;
}
.btn-block{
  line-height: 90rpx;
  border-radius:50rpx;
}
.btn-white{
  background: #fff;
  color: #00a1e9;
  border: 1px solid #00a1e9;
}
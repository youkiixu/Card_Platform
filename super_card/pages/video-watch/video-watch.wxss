/* super_card/pages/video-watch/video-watch.wxss */
.contains{
  color: #969696;
  font-size: 36rpx;
}
video{
  width: 100%;
  display: flex;
  display: -webkit-flex;
}
.fit{
  display: flex;
  display: -webkit-flex;
  padding: 20rpx 0;
  border-bottom: 1px solid #dfdfdf;
}
.left,.right{
  flex: 1;
  display: flex;
  align-items: center;
  -webkit-flex: 1;
  display: -webkit-flex;
  -webkit-align-items: center;
}
.left image{
  margin-left: 30rpx;
}
.right{
  justify-content:flex-end;
  -webkit-justify-content:flex-end;
  padding-right:30rpx;
}
.share{
  margin: 0;
}
.fit image{
  width: 50rpx;
  height: 50rpx;
  line-height:50rpx;
}

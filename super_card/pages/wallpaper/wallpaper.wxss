.btn-block::after{
  border: 0;
}
.wall-paper{
  margin: 20rpx 80rpx;
  background-color: #fff;
  border-radius: 10rpx;
  overflow: hidden;
  filter: drop-shadow(0px 0px 15px #ccc);
  display: flex;
  flex-flow: column;
  position: relative;
}
.wall-time{
  position: absolute;
  top: 30rpx;
  right: 40rpx;
  display: flex;
  flex-flow: column;
  align-items: center;
  justify-content: center;
  color:#fff;
  font-size: 24rpx;
  padding: 6rpx 16rpx;
  border: 1px solid #fff;
}
.wall-time view{
  width:60rpx;
  text-align: center;
}
.wall-time view:first-child{
  border-bottom: 1px solid #fff;
}
.wall-img{
  width: 100%;
  border-radius:10rpx 10rpx 0 0;
}
.wall-next{
  padding-top: 10rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  position: relative;
}
.wall-next .iconfont{
  font-size: 30rpx;
  line-height: 30rpx;
  color:#00a1e9;
}
.wall-next .wall-change{
  font-size: 26rpx;
  color:#00a1e9;
  margin: 0 20rpx 0 10rpx;
}
.wall-tx{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}
.paper-bot{
  display: flex;
  flex-flow: column;
  align-items: flex-start;
  justify-content: center;
  position:absolute;
  top:-60rpx;
  left:30rpx;
}
.wall-name{
  font-size: 30rpx;
  line-height: 40rpx;
  margin-top: 10rpx;
  margin-left: 10rpx;
}
.wall-dk{
  font-size: 26rpx;
  color: #949494;
  margin-left: 10rpx;
  margin-top:20rpx;
}
.wall-dk text{
  font-size: 60rpx;
  color: #00a1e9;
  line-height:60rpx;
  margin:0 10rpx;
}
.wall-blank{
  height: 150rpx;
}
.wall-bc{
  font-size: 26rpx;
  color:#666666;
  padding:0 80rpx 20rpx 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.btn-hold{
  padding:0 80rpx 50rpx 80rpx;
}
.btn-hold .btn-block{
  line-height: 80rpx;
}
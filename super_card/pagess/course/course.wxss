}
.introduce-top{
  padding: 35rpx 20rpx 25rpx 20rpx;
  background: #fff;
}
.introduce-name{
  color: #222222;
  font-size: 30rpx;
  font-weight: bold;
}
.introduce-num{
  color: #a3a3a3;
  font-size: 24rpx;
}
.introduce-price{
  color: #00c100;
  font-size: 32rpx;
}
.introduce-course{
  margin-top: 20rpx;
  padding: 20rpx;
  background: #fff;
  font-size: 28rpx;
}
.course-title{
  color: #0c0c0c;
  font-weight: bold;
}
.course-detail{
  color: #3a3a3a;
  line-height: 35rpx;
}
.catalog-item{

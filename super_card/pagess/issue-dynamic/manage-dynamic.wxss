.btn-re {
  width: 110rpx;
  height: 110rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  display: -webkit-flex;
  -webkit-align-items: center;
  -webkit-justify-content: center;
  position: fixed;
  right: 20rpx;
  bottom: 100rpx;
}

.btn-release {
  width: 110rpx;
  height: 110rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  display: -webkit-flex;
  -webkit-align-items: center;
  -webkit-justify-content: center;
  /* padding: 10rpx; */
  border-radius: 50%;
  /* background-color: #F90;
  opacity: 0.61; */
  background-color: rgba(255,200,22, 0.61);
  animation: beats ease-in-out 1.4s infinite;
}

@keyframes beats {
  0% {
    width: 90rpx;
    height: 90rpx;
    background-color: rgba(255,200,22, 0.61);
  }

  50% {
    width: 110rpx;
    height: 110rpx;
    background-color: rgba(255,200,22, 0.61);
  }

  100% {
    width: 90rpx;
    height: 90rpx;
    background-color: rgba(255,200,22, 0.61);
  }
}
.b-r-l::after{
  border: 0;
}

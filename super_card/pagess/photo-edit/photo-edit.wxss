
.contains{
  font-size: 36rpx;
}
.title{
  text-align:center;
  height:100rpx;
  font-weight:600;
  line-height: 100rpx;
  background-color: #fff;
}
.photo{
  width: 100%;
  background-color: #00a1e9;
  display: flex;
  display: -webkit-flex;
}
.info{
  display: flex;
  display: -webkit-flex;
  padding: 0 20rpx;
  height: 100rpx;
  line-height: 100rpx;
  color: #949494;
  border-bottom: 1px solid #dfdfdf;
}
.sum{
  letter-spacing: 8rpx;
  flex: 1;
  -webkit-flex: 1;
}
.act{
  display: flex;
  display: -webkit-flex;
}
.act text{
  padding-left: 10rpx;
}
.look{
  padding-left: 50rpx;
}
.btn-submit{
  margin:20rpx;
}
.btn-block{
  line-height: 80rpx;
  border-radius:50rpx;
}
.btn-blue{
  background: #00a1e9;
  color: #fff;
}
.btn-white{
  color: #00a1e9;
  border: 1px solid #00a1e9;
}
.sort{
  flex:1;
  -webkit-flex:1;
}

.fr-word{
  background-color: #fff;
  padding:20rpx;
  font-size: 28rpx;
}
/* 黑色透明弹层 */
.mask{
  position: fixed;
   background: rgba(0, 0, 0, .5);
   top: 0;
   left: 0;
   bottom: 0;
   right: 0;
   z-index: 1000;
}
.choice_box{
    width: 580rpx;
    height: 430rpx;
    position: absolute;
    left: 50%;
    top: 50%;
    margin: -215rpx 0 0 -290rpx;
    border-radius: 15rpx;
    background-color: #fff;
}
.mask-word{
  width: 580rpx;
  height: 300rpx;
  padding: 20rpx;
  box-sizing: border-box;
  border-bottom: 2rpx solid #eee;
}
.mask-word textarea{
  width:100%;
  height:300rpx;
  font-size: 28rpx;
}
.mask-bottom{
  padding: 0 20rpx;
  box-sizing: border-box;
  margin-top: 20rpx;
}
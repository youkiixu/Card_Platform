/* super_card/pagess/quick-editor/quick-editor.wxss */

.qed-textarea{
  padding:30rpx;
  background-color:#fff;
  border-bottom:1px solid #eaeaea;
}
.qed-textarea textarea{
  width:100%;
  height:200rpx;
}
.count{
  text-align: right;
  font-size: 30rpx;
  color:#b2b2b2;
}

.btn-submit{
  margin:40rpx 30rpx;
}
.btn-block{
  line-height: 90rpx;
  border-radius:50rpx;
  letter-spacing: 4rpx;
  font-size: 32rpx;
}
.btn-blue{
  background: #00a1e9;
  color: #fff;
}
.btn-white{
  color: #00a1e9;
  border: 1px solid #00a1e9;
}
/* super_card/pagess/quick-reply/quick-reply.wxss */

.qre-content{
  margin: 30rpx 0;
  background-color: #fff;
  border-top:1px solid #e5e5e5;
  border-bottom:1px solid #e5e5e5;
  padding: 0 30rpx;
}
.qrec-top{
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 100rpx;
}
.qrec-title{
  font-size: 26rpx;
  color: #a5a5a5;
}
.qrec-add{
  display: flex;
  align-items: center;
  justify-content: flex-end;
}
.qrec-add .iconfont{
  font-size: 40rpx;
  line-height: 40rpx;
}
.qrec-add view{
  font-size: 28rpx;
}
.qrec-act{
  border-top: 1px solid #e5e5e5;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.qrec-sub{
  flex:1;
  -webkit-flex:1;
  font-size: 32rpx;
  word-break: break-all;
  display: -webkit-box;    
  -webkit-box-orient: vertical;    
  -webkit-line-clamp: 1;    
  overflow: hidden;
}
.qre-num{
  font-size: 24rpx;
  color:#999999;
  text-align: center;
}
.trans{
  margin-left:20rpx;
  line-height:16rpx;
  transform:rotate(270deg);
  -webkit-transform:rotate(270deg);
  color:#ceced0;
}
.qre-hold{
  background-color:#fff;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
}
.btn-block{
  line-height: 90rpx;
  border-radius:100rpx;
}
.btn-blue{
  background: #00a1e9;
  color: #fff;
  margin:20rpx 30rpx;
  letter-spacing: 4rpx;
  font-size: 32rpx;
}
.blank{
  height: 160rpx;
}

.qrec-list{
  width:100%;
  display:flex;
  align-items:center;
  display:-webkit-flex;
  -webkit-align-items:center;
}
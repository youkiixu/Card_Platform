page{
  width: 100%;
  height: 100%;
  background: #dee4e7;
}
.banner{
  width: 100%;
  height: 320rpx;
}
.content{
  position: relative;
  padding: 0 32rpx;
  border: 1rpx solid transparent;
}
.receive-points{
  height: 260rpx;
  width: 680rpx;
  position: absolute;
  top: -80rpx;
  margin: 0 auto;
  z-index: 1;
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0 0 15rpx rgba(0, 0, 0, .3);
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  font-weight: 50;
}
.receive-points-title{
  text-align: center;
  font-size: 30rpx;
  color: #00a1e9;
  line-height: 30rpx;
}
.points-tips2{
  font-size: 20rpx;
  line-height: 25rpx;
}
.sign-list{
  margin-top: 20rpx;
  display: flex;
  display: -webkit-flex;
}
.sign-listItem{
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  line-height: 60rpx;
  font-size: 30rpx;
  color: #797979;
  border: 1rpx solid #797979;
  text-align: center;
  margin-left: 30rpx;
  display: flex;
  display: -webkit-flex;
  align-items: center;
  justify-content: center;
}
.sign-listItem:first-child{
  margin-left: 0;
}
.sign-listItem .img{
  width: 38rpx;
  height: 38rpx;
}
.sign-active{
  color: #00a1e9;
  border: 1rpx solid #00a1e9;
}
.sign-bottom{
  margin-top: 20rpx;
}
.sign-btn::after{
  border: none;
}
.sign-btn{
  background: transparent;
  width: 200rpx;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  font-size: 30rpx;
  color: #fff;
  background: #00a1e9;
  border-radius: 30rpx;
}

.forward-friends{
  height: 145rpx;
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0 0 15rpx rgba(0, 0, 0, .3);
  margin-top: 25rpx;
  display: flex;
  display: -webkit-flex;
  align-items: center;
  justify-content: center;
  padding: 0 30rpx;
  box-sizing: border-box;
}
.forward-friendsFive{
  margin-top: 205rpx;
}
.forward-friends-tips{
  flex: 1;
  font-size: 24rpx;
  color: #606060;
}
.forward-friends-todo{
  width: 125rpx;
  height: 40rpx;
  line-height: 40rpx;
  color: #fff;
  background: #00a1e9;
  border-radius: 10rpx;
  font-size: 32rpx;
  text-align: center;
  box-shadow: 0 5rpx 5rpx rgba(0, 161, 233, .3);
}
.integralMall{
  width: 126rpx;
  height: 126rpx;
  background: #00a1e9;
  border-radius: 50%;
  position: fixed;
  bottom: 12%;
  right: 20rpx;
  display: flex;
  display: -webkit-flex;
  align-items: center;
  justify-content: center;
}
.integralMall-inner{
  width: 105rpx;
  height: 105rpx;
  border: 1rpx solid #fff;
  border-radius: 50%; 
  color: #fff;
  font-size: 30rpx;
  text-align: center;
  padding: 15rpx 0;
  box-sizing: border-box;
}
.integralMall-inner text{
  display: block;
  line-height: 35rpx;
}
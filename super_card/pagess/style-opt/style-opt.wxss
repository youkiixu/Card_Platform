/* super_card/pages/style-opt/style-opt.wxss */

page {
 background-color: rgba(0, 0, 0, 0.8);
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.so-sv{
  display:flex;
  flex-flow:column;
  height:100vh;
  /* white-space: nowrap; */
}
.so-sv-act{
  margin-top:50rpx;
  display: flex;
  flex-flow: column;
  align-items: center;
}
.act-img{
  width: 90vw;
  padding:2vw;
  border: 1px solid #cccccc;
}
.blank{
  height: 200rpx;
}

.thisinfo{
  display:flex;
  align-items:center;
  justify-content:space-between;
  display:-webkit-flex;
  -webkit-align-items:center;
  -webkit-justify-content:space-between;
  padding:20rpx;
  font-size:32rpx;
}
.this-price text{
  font-size:50rpx;
  line-height: 50rpx;
}
.bottom{
  /*background-color: #fff;*/
  position: fixed;
  bottom: 0;
  width:100%;
  z-index: 100;
  /*filter:drop-shadow(0px 0px 3px #ccc);*/
}
.btn-submit{
  padding:20rpx 20rpx 20rpx 20rpx;
}
.btn-block{
  height:90rpx;
  border-radius:50rpx;
}
.btn-blue{
  background: #00a1e9;
  color: #fff;
  font-size:36rpx;
  letter-spacing:4rpx;
  display:flex;
  justify-content:center;
  align-items: center;
}

.btn-blue text{
  font-size: 28rpx;
}

radio{
  width: 56rpx;
  height: 64rpx;
}
radio .wx-radio-input{
  width: 50rpx;
  height: 50rpx;
}
radio .wx-radio-input.wx-radio-input-checked::before{
  width: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
  font-size:50rpx; 
}
radio .wx-radio-input-checked{
  background-color: #6aa84f !important;
  border:1px solid #6aa84f !important;
}

.act-info{
  display:flex;
  align-items: center;
}
.so-content-name{
  margin-left: 10rpx;
}

scroll-view label:last-child .so-sv-act{
  margin-bottom: 240rpx;
}

/* 新版本样式 */

.stop-tit{
  padding: 50rpx 0;
  font-size: 26rpx;
  text-align:center;
  letter-spacing:4rpx;
}
.stop-sw{
  height:900rpx;
}
.stop-sw swiper-item{
  /* width:70vw; */
  display:flex;
  flex-flow:column;
  align-items:center;
  display:-webkit-flex;
  -webkit-flex-flow:column;
  -webkit-align-items:center;
}
.si-top{
  padding:0 1vw;
  text-align:center;
  font-size:32rpx;
  margin-bottom:30rpx;
  color:#fff;
  letter-spacing:4rpx;
}
.si-info{
  width:75vw;
  padding:1vw; 
  border-radius:20rpx;
  filter:drop-shadow(0px 0px 3px #ccc);
  background-color: #fff;
  display:flex;
  display:-webkit-flex;
}
.si-img{
  width:100%;
  height: 730rpx;
  border-radius:20rpx;
}
.go-buy{
  margin-left: 20rpx;
}
.si-info{
  transform: scale(0.94);
  -webkit-transform: scale(0.94);
}
.si-info.active{
  transform: scale(1.04);
  -webkit-transform: scale(1.04);
  transition:all .2s ease-in 0s;
}